<!DOCTYPE html>
<html>
    <head>
    	<title>{% block title %}Brightmoor Database - Login{% endblock %}</title>
        <meta charset="UTF-8" name="viewport" content="width=device-width, initial-scale=1.0" />
		{% block stylesheets %}
        	<link href="{{ asset('css/db_styles.css') }}" rel="stylesheet" />
        {% endblock %}
    </head>
    <body>
		<section id="loginPage">
			{# <a class="noLinkStyle" href="{{ path('homepage') }}"><img src="{{ asset('images/building_movement_logo.jpg') }}" id="buildingMovementLandingLogo" alt="Building Movement Logo"/><h1 class="header">CHIRP Family Database</h1></a> #}
			<a class="noLinkStyle" href="{{ path('homepage') }}"><img src="{{ asset('images/brightmoor_logo.jpg') }}" class="brightmoorHeader" alt="Brightmoor Connection Logo"/><h1 class="header">Brightmoor Connection Database</h1></a>
		<div class="formStyle">
			<div id="loggedInAs">
				{% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}
					 Logged in as: <a href="{{ path('fos_user_profile_show') }}">{{ app.user.username }}</a> |
					<a href="{{ path('fos_user_security_logout') }}">
						{{ 'Logout'|trans({}, 'FOSUserBundle') }}
					</a>
				{% endif %}
			</div>

			{% if app.request.hasPreviousSession %}
				{% for type, messages in app.session.flashbag.all() %}
					{% for message in messages %}
						<div class="flash-{{ type }}">
							{{ message }}
						</div>
					{% endfor %}
				{% endfor %}
			{% endif %}

			<div>
				{% block fos_user_content %}
				{% endblock fos_user_content %}
			</div>
		</div>
		</section>
    </body>
</html>
