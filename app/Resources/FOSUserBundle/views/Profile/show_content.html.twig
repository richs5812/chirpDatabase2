{% trans_default_domain 'FOSUserBundle' %}
<h2>User Profile for: {{ user.username }}</h2>
<div class="fos_user_user_show">
    <p>{{ 'username'|trans }}: {{ user.username }}</p>
    <p>{{ 'email address'|trans }}: {{ user.email }}</p>
</div>

<a href="{{ path('fos_user_profile_edit') }}">Edit profile</a> | <a href="{{ path('fos_user_change_password') }}">Change Password</a>
